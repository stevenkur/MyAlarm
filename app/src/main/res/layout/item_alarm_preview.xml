<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llrvListAlarm"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_white"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">
    <TextView
        android:id="@+id/tvAlarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="namaAlarm"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:textAlignment="viewStart"/>

    <LinearLayout
        android:id="@+id/llAlarmItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAlarmHour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="08"
            android:textAlignment="viewEnd"
            android:textSize="30dp" />

        <TextView
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvAlarmMinute"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:textAlignment="viewStart"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvAlarmTimeZone"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ivSilang"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:src="@drawable/silang"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAlarmDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mon, Nov 13"
        android:textAlignment="viewEnd"
        android:paddingRight="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/tvAlarmStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textAlignment="textEnd"
        android:paddingRight="@dimen/activity_horizontal_margin"/>
</LinearLayout>